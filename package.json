{
  "name": "@magik_io/lint_golem",
  "description": "A really magik lint golem",
  "version": "3.6.0",
  "sideEffects": false,
  "engines": {
    "node": ">=25"
  },
  "packageManager": "pnpm@10.22.0",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./LintGolemError": {
      "types": "./dist/LintGolemError.d.ts",
      "import": "./dist/LintGolemError.mjs",
      "require": "./dist/LintGolemError.cjs"
    }
  },
  "module": "dist/index.mjs",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "test": "vitest run --coverage --config ./vitest.config.ts",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "iterate": "pnpm version minor && git push origin main --tags && pnpm publish --access public --no-git-checks"
  },
  "dependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@typescript-eslint/utils": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-n": "^17.23.1",
    "fast-glob": "^3.3.3",
    "typescript-eslint": "^8.47.0"
  },
  "devDependencies": {
    "@types/eslint": "^9.6.1",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/node": "^24.10.1",
    "@vitest/coverage-v8": "^4.0.10",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1",
    "vitest": "^4.0.10"
  },
  "authors": [
    {
      "name": "Antonio B.",
      "email": "Abourassa@AssetVal.com",
      "github": "https://github.com/Abourass"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/MagikIO/lint_golem.git"
  },
  "license": "MIT",
  "unbuild": {
    "rollup": {
      "esbuild": {
        "tsconfigRaw": {
          "extends": "./tsconfig.json",
          "compilerOptions": {
            "outDir": "dist",
            "rootDir": "src",
            "declaration": true,
            "experimentalDecorators": true,
            "target": "ESNext"
          },
          "include": [
            "./src/**/*.ts"
          ]
        }
      }
    }
  }
}
